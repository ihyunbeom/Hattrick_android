<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#eeeeee"
    tools:context="com.hattrick.ihyunbeom.hat_client.gameDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/adding"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#8ebcb9"
            android:text="저 장"/>

        <TextView
            android:text="Date"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDate"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:id="@+id/teamName"
                        android:text="My team"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="VS"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/oppName"
                        android:text="Opponant"
                        android:textSize="20dp"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="5"
                        android:textColor="#3f59ff"
                        android:id="@+id/myScore"
                        android:textSize="40dp"
                        android:padding="10dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:textSize="20dp"
                        android:textColor="#3f59ff"
                        android:padding="10dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:text="3"
                        android:textColor="#ff3f3f"
                        android:id="@+id/oppScore"
                        android:textSize="40dp"
                        android:padding="10dp"
                        android:gravity="center_horizontal"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginBottom="10dp"
            android:paddingRight="5dp"
            android:background="#ffffff">


            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#3f59ff"
                android:text="+"
                android:id="@+id/addOppGoal"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="#ff3f3f"
                android:text="-"
                android:id="@+id/deleteOppGoal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#3f59ff"
                android:text="+"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:id="@+id/addMyGoal"/>

            <ListView
                android:id="@+id/goalPlayerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:choiceMode="multipleChoice">

            </ListView>
        </LinearLayout>




    </LinearLayout>


</RelativeLayout>
