<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_game_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.hattrick.ihyunbeom.hat_client.GameDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
            <Button
                android:id="@+id/delete"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="#ff7c7c"
                android:text="삭 제"/>


            <Button
                android:id="@+id/adding"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_weight="9"
                android:background="@color/colorPrimary"
                android:text="완 료"/>
        </LinearLayout>

        <TextView
            android:text="Date"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textDate"
            android:layout_gravity="left"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff"
            android:gravity="center">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:id="@+id/teamName"
                        android:text="My team"
                        android:textSize="18dp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"/>
                    <TextView
                        android:text="VS"
                        android:textSize="18dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/oppName"
                        android:text="Opponant"
                        android:textSize="18dp"
                        android:gravity="center_horizontal"
                        android:textColor="#000000"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="99"
                        android:textColor="#3f59ff"
                        android:id="@+id/myScore"
                        android:textSize="50dp"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:textSize="50dp"
                        android:textColor="#3f59ff"
                        android:gravity="center_horizontal"/>
                    <TextView
                        android:text="99"
                        android:textColor="#ff3f3f"
                        android:id="@+id/oppScore"
                        android:textSize="50dp"
                        android:gravity="center_horizontal"/>
                </TableRow>

            </TableLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"

            android:background="#eeeeee">


            <Button
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="#555555"
                android:textSize="15dp"
                android:background="#cccccc"
                android:layout_marginRight="5dp"
                android:text="+1"
                android:id="@+id/addOppGoal"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:textColor="#555555"
                android:textSize="15dp"
                android:background="#cccccc"
                android:text="-1"
                android:id="@+id/deleteOppGoal"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:weightSum="3"
                android:orientation="horizontal">
            <Button
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:background="#8ebcb9"
                android:text="득 점 추 가 !"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:id="@+id/addMyGoal"/>

            <Button
                android:layout_width="15dp"
                android:layout_height="30dp"
                android:textColor="#ffffff"
                android:background="#ffa8a8"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="취 소"
                android:id="@+id/deleteMyGoal"/>
                </LinearLayout>

            <ListView
                android:id="@+id/goalPlayerList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
