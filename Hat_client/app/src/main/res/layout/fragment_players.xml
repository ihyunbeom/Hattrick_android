<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hattrick.ihyunbeom.hat_client.PlayersFragment">

    <LinearLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선수 현황"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="FW"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="MF"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="DF"
                    android:textSize="14dp"
                    android:textColor="#60c130"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="GK"
                    android:textSize="14dp"
                    android:textColor="#8c8600"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="Total"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/playerFW"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/playerMF"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/playerDF"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/playerGK"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/playerTotal"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/addPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:background="#16a085"
            android:layout_gravity="right"
            android:text="선수 추가"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:text="이 름"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                    <TextView
                        android:text="포지션"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                    <TextView
                        android:text="득 점"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                    <TextView
                        android:text="출 전"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

    </LinearLayout>

</RelativeLayout>
