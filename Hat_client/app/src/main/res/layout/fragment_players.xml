<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hattrick.ihyunbeom.hat_client.PlayersFragment">

    <LinearLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선수 현황"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="FW"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="MF"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="CF"
                    android:textSize="14dp"
                    android:textColor="#60c130"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="GK"
                    android:textSize="14dp"
                    android:textColor="#8c8600"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="Total"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="2"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="1"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="1"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="1"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="5"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#16a085"
                android:background="#dddddd"
                android:text="정보 수정" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:background="#16a085"
                android:textColor="#FFFFFF"
                android:text="선수 추가"/>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="이름"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="포지션"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="득점"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="출전"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/name"
                    android:text="우지훈"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/position"
                    android:text="FW"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/goal"
                    android:text="30"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/play"
                    android:text="6"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="박대원"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="MF"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="11"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="5"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="허행찬"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="CF"
                    android:textSize="14dp"
                    android:textColor="#60c130"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="1"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="5"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="이현범"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="GK"
                    android:textSize="14dp"
                    android:textColor="#8c8600"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="31"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="6"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="홍길동"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="FW"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="32"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:text="5"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>


        </TableLayout>

    </LinearLayout>

</RelativeLayout>
