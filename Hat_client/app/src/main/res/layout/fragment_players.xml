<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#eeeeee"
    tools:context="com.hattrick.ihyunbeom.hat_client.PlayersFragment">

    <LinearLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="#ffffff">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="선수 현황"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:text="FW"
                        android:textSize="14dp"
                        android:textColor="#ff3f3f"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    <TextView
                        android:text="MF"
                        android:textSize="14dp"
                        android:textColor="#3f59ff"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    <TextView
                        android:text="DF"
                        android:textSize="14dp"
                        android:textColor="#60c130"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    <TextView
                        android:text="GK"
                        android:textSize="14dp"
                        android:textColor="#8c8600"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    <TextView
                        android:text="Total"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/playerFW"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                    <TextView
                        android:id="@+id/playerMF"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                    <TextView
                        android:id="@+id/playerDF"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                    <TextView
                        android:id="@+id/playerGK"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                    <TextView
                        android:id="@+id/playerTotal"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="360dp"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/addPlayer"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:background="#8ebcb9"
                android:text="등 록"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/border2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름"
                        android:textSize="14dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/border2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="위치"
                        android:textSize="14dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/border2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="득점"
                        android:textSize="14dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/border2">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출전"
                        android:textSize="14dp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/playerList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        </ListView>
    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
