<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hattrick.ihyunbeom.hat_client.GamesFragment">

    <LinearLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 전적"
            android:textSize="18dp"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="경기"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="승"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="무"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="패"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="득"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
                <TextView
                    android:text="실"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#dddddd"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/scoreGame"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/scoreWin"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/scoreDraw"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/scoreLose"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/scoreGoals"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
                <TextView
                    android:id="@+id/scoreLost"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"/>
            </TableRow>

        </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addGame"
            android:text="경기 추가"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_margin="10dp"
            android:background="#16a085"
            android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:text="날 짜"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                    <TextView
                        android:text="상대팀"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                    <TextView
                        android:text="점 수"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                    <TextView
                        android:text="결 과"
                        android:textSize="14dp"
                        android:textColor="#000000"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="#dddddd"/>
                </TableRow>

            </TableLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/gameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>





    </LinearLayout>

</RelativeLayout>
