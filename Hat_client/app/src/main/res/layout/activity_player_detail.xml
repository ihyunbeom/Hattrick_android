<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_player_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.hattrick.ihyunbeom.hat_client.PlayerDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:orientation="horizontal">
            <Button
                android:id="@+id/delete"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:background="#ff7c7c"
                android:text="삭 제"/>


            <Button
                android:id="@+id/adding"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="11"
                android:layout_margin="3dp"
                android:background="@color/colorPrimary"
                android:text="완 료"/>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:gravity="center"
            android:background="#ffffff">
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/position"
                android:text="FW"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textColor="#333333"
                android:textSize="25dp"/>
    
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name"
                android:text="LeeHyunBeom"
                android:layout_weight="4"
                android:textColor="#333333"
                android:textSize="25dp"/>
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:stretchColumns="*">

                <TableRow>
                    <TextView
                        android:text="출 전"
                        android:textSize="14dp"
                        android:textColor="#444444"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    <TextView
                        android:text="득 점"
                        android:textSize="14dp"
                        android:textColor="#3f59ff"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    <TextView
                        android:text="평균 득점"
                        android:textSize="14dp"
                        android:textColor="#60c130"
                        android:padding="5dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border2"/>
                    
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/outing"
                        android:textSize="32dp"
                        android:textColor="#444444"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                    <TextView
                        android:id="@+id/goal"
                        android:textSize="32dp"
                        android:textColor="#3f59ff"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>
                    <TextView
                        android:id="@+id/average"
                        android:textSize="32dp"
                        android:textColor="#60c130"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:background="@drawable/border"/>

                </TableRow>

            </TableLayout>
    
    
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#ffffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="출전 경기"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="4"
                >
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#eeeeee">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="날 짜"
                        android:textSize="12dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#eeeeee">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="상대팀"
                        android:textSize="12dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#eeeeee">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="점 수"
                        android:textSize="12dp"
                        android:textColor="#000000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:background="#eeeeee">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="득 점"
                        android:textSize="12dp"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/outingList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
