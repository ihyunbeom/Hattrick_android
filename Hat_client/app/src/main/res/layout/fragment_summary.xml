<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#eeeeee"
    tools:context="com.hattrick.ihyunbeom.hat_client.SummaryFragment">

    <LinearLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24dp"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:id="@+id/teamName"/>

        <Button
            android:text="수 정"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="#8ebcb9"
            android:id="@+id/team_info_setting" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="#ffffff"
            android:stretchColumns="*"
            android:id="@+id/team_info">

            <TableRow>
                <TextView
                    android:text="관리자"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2" />
                <TextView
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:id="@+id/managerName"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:text="창단일"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"
                    android:id="@+id/created"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:text="운영비"
                    android:textSize="14dp"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    android:id="@+id/textView"
                    android:background="@drawable/border2"/>

                <TextView
                    android:text="-"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:background="@drawable/border"
                    android:gravity="center_horizontal"/>
            </TableRow>

        </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="현재 전적"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="경기"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="승"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="무"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="패"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="득"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="실"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/scoreGame"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/scoreWin"
                    android:textSize="16dp"
                    android:textColor="#3f59ff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/scoreDraw"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/scoreLose"
                    android:textSize="16dp"
                    android:textColor="#ff3f3f"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/scoreGoals"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/scoreLost"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
            </TableRow>

        </TableLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선수 현황"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="FW"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="MF"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="DF"
                    android:textSize="14dp"
                    android:textColor="#60c130"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="GK"
                    android:textSize="14dp"
                    android:textColor="#8c8600"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
                <TextView
                    android:text="Total"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border2"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/playerFW"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/playerMF"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/playerDF"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/playerGK"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
                <TextView
                    android:id="@+id/playerTotal"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="@drawable/border"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    </LinearLayout>

</ScrollView>
