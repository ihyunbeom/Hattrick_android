<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.hattrick.ihyunbeom.hat_client.SummaryFragment">

    <LinearLayout
        android:id="@+id/fl_activity_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:background="#ffffff">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="70dp"
                    android:background="#00000000"
                    android:id="@+id/team_info_setting" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="34dp"
                    android:gravity="center"
                    android:layout_marginTop="70dp"
                    android:layout_marginBottom="5dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Real Madrid"
                    android:id="@+id/teamName"/>

            </RelativeLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:stretchColumns="*"
                android:id="@+id/team_info">

                <TableRow>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:id="@+id/created"/>
                    <TextView
                        android:textSize="14dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="center_horizontal"
                        android:id="@+id/managerName"/>
                </TableRow>

<!--
                <TableRow>

                    <TextView
                        android:text="운영비"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/textView"
                        android:background="@drawable/border2"/>

                    <TextView
                        android:text="-"
                        android:textSize="14dp"
                        android:textColor="#444444"
                        android:padding="10dp"
                        android:background="@drawable/border"
                        android:gravity="center_horizontal"/>
                </TableRow>
-->
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="15dp"
            android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="전체 기록"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="경기"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="승"
                    android:textSize="14dp"
                    android:textColor="#3f59ff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="무"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="패"
                    android:textSize="14dp"
                    android:textColor="#ff3f3f"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="득점"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="실점"
                    android:textSize="14dp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/scoreGame"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/scoreWin"
                    android:textSize="18dp"
                    android:textColor="#3f59ff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/scoreDraw"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/scoreLose"
                    android:textSize="18dp"
                    android:textColor="#ff3f3f"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/scoreGoals"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/scoreLost"
                    android:textSize="18dp"
                    android:textColor="#000000"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
            </TableRow>

        </TableLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="선수 현황"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*">

            <TableRow>
                <TextView
                    android:text="FW"
                    android:textSize="16dp"
                    android:textColor="#ff3f3f"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="MF"
                    android:textSize="16dp"
                    android:textColor="#3f59ff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="DF"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="GK"
                    android:textSize="16dp"
                    android:textColor="#8c8600"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
                <TextView
                    android:text="Total"
                    android:textSize="16dp"
                    android:textColor="#ffffff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"
                    android:background="#8ebcb9"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/playerFW"
                    android:textSize="16dp"
                    android:textColor="#ff3f3f"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/playerMF"
                    android:textSize="16dp"
                    android:textColor="#3f59ff"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/playerDF"
                    android:textSize="16dp"
                    android:textColor="@color/colorPrimary"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/playerGK"
                    android:textSize="16dp"
                    android:textColor="#8c8600"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/playerTotal"
                    android:textSize="16dp"
                    android:textColor="#555555"
                    android:padding="5dp"
                    android:gravity="center_horizontal"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>

    </LinearLayout>

</ScrollView>
