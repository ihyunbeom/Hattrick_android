<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hattrick.ihyunbeom.hat_client">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntroActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="풋살 매니저"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TeamSettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".PlayerSettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".GameAddingActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".GameDetailActivity" />
        <activity
            android:name=".OutingPlayer"
            android:theme="@style/PopupTheme" />
        <activity
            android:name=".PlayerDetailActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".StadiumDetail"
            android:theme="@style/PopupTheme" ></activity>
    </application>

</manifest>